<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.people.O">
	<class name="People" table="people">
		<id name="id" column="id" type="string">
			<generator class="assigned"/><!-- 主键生成策略（identity，sequence，assigned） -->
		</id>
		
		<property name="pname" column="pname" type="string"></property>
		<property name="age" column="age" type="int"></property>
		<property name="sex" column="sex" type="string"></property>
		<property name="education" column="education" type="string"></property>
		<property name="email" column="email" type="string"></property>
		<property name="identity" column="identity" type="string"></property>
		<property name="idCart" column="idCart" type="string"></property>
		<property name="img" column="img" type="string"></property>
		<property name="major" column="major" type="string"></property>
		<property name="nation" column="nation" type="string"></property>
		<property name="phone" column="phone" type="string"></property>
		<property name="registime" column="registime" type="date"></property>
		<property name="salary" column="salary" type="string"></property>
		<property name="state" column="state" type="string"></property>
		
		<property name="address" column="address" type="string"></property>
		<property name="birthday" column="birthday" type="string"></property>
		<property name="political" column="political" type="string"></property>
		<property name="bank" column="bank" type="string"></property>
		<property name="register" column="register" type="string"></property>
		<property name="speciality" column="speciality" type="string"></property>
		<property name="resum" column="resum" type="string"></property>
		<property name="family" column="family" type="string"></property>
		<property name="other" column="other" type="string"></property>
		
		<many-to-one name="thirdO" column="organizeId" class="cn.organization.O.ThirdOrganization" lazy="false"/>
		<many-to-one name="pos" column="positionId" class="cn.organization.O.Position"  lazy="false"/>
		<!-- 原因是:Hibernate3以后的版本，默认的lazy属性就是true，如果再次设置lazy="true"就会发生该异常，去掉问题解决. -->
	</class>
</hibernate-mapping>
